# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/papsp

# JWT Secret for authentication (MUST be cryptographically secure - use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_characters

# Server port
PORT=5000

# Email configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_app_specific_password_here

# JWT Secret for email confirmation (MUST be different from JWT_SECRET)
JWT_MAIL_SECRET=your_secure_jwt_mail_secret_here_minimum_32_characters

# JWT token expiration
JWT_EXPIRATION=1h

# API URL
API_URL=http://localhost:5000
